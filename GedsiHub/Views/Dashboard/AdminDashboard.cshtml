@model GedsiHub.ViewModels.AdminDashboardViewModel

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="feedback-title-searcbar-con">
    <h1 id="feedback-responses-title" class="modules_title" style="color: #464040;">Admin Dashboard</h1>
    <div class="manage-user-and-gen-rep-con">
        <a id="ManageUsersButton" asp-controller="Admin" asp-action="UserManagement" class="btn btn-primary">
            <img src="~/images/ManageUsers.png" alt="Manage Users" /> Manage Users
        </a>
        <button id="AnalyticsButton" type="button" onclick="location.href='@Url.Action("Dashboard","Analytics")'"><img src="~/images/Analytics.png" />Analytics</button>
    </div>
</div>
<hr class="linebreakAdmin">

<div class="ad-dashboard-container">
    <div class="container admin-dashboard-item-con">
        <div class="label-and-no-con">
            <span class="ad-mod-text-dashboard">Total Users</span>
            <h1 class="ad-number">@Model.TotalUsers</h1>
        </div>
        <img src="~/images/People.png" alt="Total Users" />
    </div>
    <div class="container admin-dashboard-item-con">
        <div class="label-and-no-con">
            <span class="ad-mod-text-dashboard">Admin Users</span>
            <h1 class="ad-number">@Model.AdminCount</h1>
        </div>
        <div></div>
        <img src="~/images/Admin.png" alt="Admin Users" />
    </div>
    <div class="container admin-dashboard-item-con">
        <div class="label-and-no-con">
            <span class="ad-mod-text-dashboard">Non-Admin Users</span>
            <h1 class="ad-number">@Model.NonAdminCount</h1>
        </div>
        <div></div>
        <img src="~/images/Total_Learners.png" alt="Non-Admin Users" />
    </div>
</div>


    <h1 class="recent-ad-log-text">Recent Admin Activity Logs</h1>
    <div id="admin-activity-logs-table-container">
        <table class="table-striped table-hover">
            <thead>
               
                <tr>
                    <th>Admin</th>
                    <th>Action</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.RecentLogs)
                {
                <tr>
                        <td>@log.AdminUser</td>
                        <td>@log.Action</td>
                        <td>@log.Timestamp.ToString("g")</td>
                </tr>
                    }
            </tbody>
        </table>
    </div>




