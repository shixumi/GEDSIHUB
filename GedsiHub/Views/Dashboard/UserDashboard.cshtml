@model GedsiHub.ViewModels.UserDashboardViewModel

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "User Dashboard";

    // Calculate the start day of the current week based on CurrentStreak
    // For example, if CurrentStreak = 9, startDay = 8
