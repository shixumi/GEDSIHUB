@model IEnumerable<GedsiHub.Models.Lesson>
@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Lesson";
}


<div>
    <h2>Lessons for Module @ViewBag.ModuleId</h2>

    <p>
        <a asp-action="Create" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-primary">Create New Lesson</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Lesson Number</th>
                <th>Overview</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model)
            {
                <tr>
                    <td>@lesson.Title</td>
                    <td>@lesson.LessonNumber</td>
                    <td>@lesson.Overview</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@lesson.LessonId" class="btn btn-info">Details</a> |
                        <a asp-action="Edit" asp-route-id="@lesson.LessonId" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@lesson.LessonId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Index" asp-controller="Module" class="btn btn-secondary">Back to Modules</a>
    </p>

</div>
