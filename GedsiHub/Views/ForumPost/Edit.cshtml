@model GedsiHub.ViewModels.ForumPostViewModel

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Edit Post";
}

<div class="container-forum pt-lg-5 pt-md-4 pt-sm-3 pt-2">
    <!-- Breadcrumbs -->
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb forum">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit - @Model.Title</li>
        </ol>
    </nav>

    <h2>Edit Post</h2>

    <!-- Display validation errors if any -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!--- Card Posts -->
    <div class="card gedf-card">
        <!-- Form to edit the post -->
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- Hidden field for Post ID -->
            <input type="hidden" asp-for="PostId" />

            <div class="card-body">
                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">
                        Title
                        <span style="color: #dd3025; margin-left: 5px;">*</span>
                    </label>
                    <input asp-for="Title" class="form-control create-input" placeholder="Enter your title here..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Flair Selection -->
                <div class="mb-3">
                    <label class="form-label">Select Flair</label>
                    <div class="flair-options d-flex flex-wrap">
                        <div class="form-check me-3 mb-2">
                            <input class="form-check-input" type="radio" asp-for="Flair" value="Discussion"
                                   checked="@(Model.Flair == "Discussion")" />
                            <label class="form-check-label" for="Flair">Discussion</label>
                        </div>
                        <div class="form-check me-3 mb-2">
                            <input class="form-check-input" type="radio" asp-for="Flair" value="Need Advice"
                                   checked="@(Model.Flair == "Need Advice")" />
                            <label class="form-check-label" for="Flair">Need Advice</label>
                        </div>
                        <div class="form-check me-3 mb-2">
                            <input class="form-check-input" type="radio" asp-for="Flair" value="Unsolicited Advice"
                                   checked="@(Model.Flair == "Unsolicited Advice")" />
                            <label class="form-check-label" for="Flair">Unsolicited Advice</label>
                        </div>
                        <div class="form-check me-3 mb-2">
                            <input class="form-check-input" type="radio" asp-for="Flair" value="Meme"
                                   checked="@(Model.Flair == "Meme")" />
                            <label class="form-check-label" for="Flair">Meme</label>
                        </div>
                    </div>
                    <span asp-validation-for="Flair" class="text-danger"></span>
                </div>

                <!-- Module Selection -->
                <div class="mb-3">
                    <label for="ModuleId" class="form-label">Select Module (Tag)</label>
                    <select asp-for="ModuleId" class="form-control" asp-items="@(new SelectList(Model.Modules, "ModuleId", "Title", Model.ModuleId))">
                        <option value="">-- Select a Module --</option>
                    </select>
                    <span asp-validation-for="ModuleId" class="text-danger"></span>
                </div>

                <!-- Content -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">
                        Content
                        <span style="color: #dd3025; margin-left: 5px;">*</span>
                    </label>
                    <textarea asp-for="Content" class="form-control create-input-ta" rows="3" placeholder="Enter your content here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Poll Options -->
                <div class="form-group">
                    <label asp-for="PollOptions" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Poll Options (Optional)</label>
                    <input asp-for="PollOptions" class="form-control create-input" />
                    <span asp-validation-for="PollOptions" class="text-danger"></span>
                </div>

                <!-- Image Upload -->
                <div class="form-group">
                    <label asp-for="ImageFile" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Upload Image (Optional)</label>
                    <div class="custom-file">
                        <input asp-for="ImageFile" type="file" class="form-control img-input" id="imageUpload" accept=".jpg, .jpeg, .png, .gif" />
                        <label class="form-label mt-2" id="fileLabel">No file chosen</label> <!-- Label for file name -->
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <!-- Card Footer Buttons -->
            <div class="d-flex align-items-center card-footer edit">
                <div class="card-footer-btn">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("imageUpload").addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const imagePreview = document.getElementById("imagePreview");
                    imagePreview.src = e.target.result;
                    document.getElementById("imagePreviewContainer").style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById("imagePreviewContainer").style.display = "none";
            }
        });
    </script>
}
