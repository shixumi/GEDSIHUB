@model GedsiHub.Models.Assessment

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Create Assessment";
}

<!-- Create Assessment -->

<div>
    <!-- Breadcrumbs -->
    <ol class="breadcrumb" id="breadcrumb">
        <li class="breadcrumb-item">
            <!-- Proceed to list of modules page -->
            <a asp-controller="Module" asp-action="Index"><span>Modules</span></a>

        </li>
        <li class="breadcrumb-item">
            <!-- Proceed to list of lessons page -->

            <a asp-action="Details" asp-controller="Module" asp-route-moduleId="@ViewBag.ModuleId">
                <span id="module_number" class="module_number">Module</span>
            </a>
        </li>
        <!-- Current lesson page -->
        <li class="breadcrumb-item">
            <a asp-action="Create" asp-route-moduleId="@ViewBag.ModuleId"><span>Create Assessment</span></a>
        </li>
    </ol>


    <!-- Assessment Title -->
    <span class="assessment_title">Create Assessment for Module</span>

    <!--- Form for creating module assessment -->
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken() <!-- Anti-forgery token for security -->
        <input type="hidden" asp-for="ModuleId" />

        <div class="cms_white_base_container">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="H5PEmbedCode" class="control-label">H5P Embed Code</label>
                <textarea asp-for="H5PEmbedCode" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="H5PEmbedCode" class="text-danger"></span>
                <small class="form-text text-muted">
                    Paste the entire H5P iframe embed code here.
                </small>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="Module" asp-route-id="@Model.ModuleId" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
