@model GedsiHub.Models.Assessment

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Delete Assessment";
}

<h1>Delete Assessment</h1>

<h3>Are you sure you want to delete this assessment?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AssessmentId" />
    <input type="hidden" asp-for="ModuleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Module" asp-route-id="@Model.ModuleId" class="btn btn-secondary">Cancel</a>
</form>
