@model GedsiHub.Models.Assessment
@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Delete Assessment";
}

<h2>Delete Assessment</h2>

<h3>Are you sure you want to delete this assessment?</h3>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>H5P ID:</strong> @Model.H5PId</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AssessmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Module" asp-route-id="@Model.ModuleId" class="btn btn-secondary">Cancel</a>
</form>
