    <script>
        $(document).ready(function () {
            function loadNotifications() {
                $.get('/Notifications/GetRecentNotifications', function (data) {
                    $('#notificationsList').html(data);
                });

                // Update notifications count
                $.get('/Notifications/GetUnreadCount', function (count) {
                    $('#notificationsCount').text(count);
                });
            }

            // Load notifications when the dropdown is opened
            $('#notificationsDropdown').on('click', function () {
                loadNotifications();
            });

            // SignalR setup
            var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

            connection.on("ReceiveNotification", function () {
                // Optionally update notifications count or refresh notifications
                loadNotifications();
            });

            connection.start().then(function () {
                console.log('SignalR connected');
            }).catch(function (err) {
                return console.error(err.toString());
            });

            // Initial load of unread count
            $.get('/Notifications/GetUnreadCount', function (count) {
                $('#notificationsCount').text(count);
            });
        });
    </script>

