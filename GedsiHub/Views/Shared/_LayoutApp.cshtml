    <!-- Chatbot Floating Button and Interface -->
    <div class="chatbot-container">
        <!-- Floating Chatbot Button -->
        <button class="chatbot-button" id="chatbotToggle">
            <i class="fas fa-praying-hands chatbot-icon"></i> <!-- Using Font Awesome for the robot icon -->
        </button>

        <!-- Chatbot Interface -->
        <div class="chatbot-interface" id="chatbotInterface">
            <div class="chatbot-header">
                Talk to GAD!
                <button class="chatbot-exit" id="chatbotExit">&times;</button> <!-- Exit Button -->
            </div>
            <div class="chatbot-body overflow-auto">
                <!-- Chat bubble message -->
                <h6>Select an option:</h6>
                <div id="chatOptions" class="d-flex justify-content-between align-content-center mb-2">
                    
                    <button id="faqButton" class="btn btn-primary">FAQs</button>
                    <button id="modulesButton" class="btn btn-primary">Modules</button>
                    <button id="contactButton" class="btn btn-primary">Contact</button>

                </div>
                <!-- FAQ Section -->
                <div id="faqSection" class="mt-4" style="display: none;">
                    <h5>Frequently Asked Questions</h5>
                    <ul id="faqList" class="list-group"></ul>
                </div>

                <!-- Modules Section -->
                <div id="modulesSection" class="mt-4" style="display: none;">
                    <h5>Available Modules</h5>
                    <ul id="modulesList" class="list-group"></ul>
                </div>

                <!-- Contact Section -->
                <div id="contactSection" class="mt-4" style="display: none;">
                    <h5>Contact Information</h5>
                    <div id="contactInfo">Fetching contact info...</div>
                </div>

                <!-- Chat Message -->
                <div class="chat-message mt-3">
                    <div class="message-bubble">
                        <img src="https://picsum.photos/50/50" alt="Bot Avatar" class="bot-avatar" />
                        <div class="d-flex align-items-center">
                            <p class="message-text">Hello, how may I help you?</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chatbot Footer -->
            <div class="chatbot-footer">
                <div class="chat-input">
                    <input type="text" class="chat-text-input" placeholder="Ask me something..." />
                    <button class="btn chat-send-button" type="button">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>



    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <!-- Logout form inside modal -->
                    <form class="form-inline logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary">Yes</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>







