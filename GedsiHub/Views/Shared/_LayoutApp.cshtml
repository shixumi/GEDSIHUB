<body data-authenticated="@User.Identity.IsAuthenticated.ToString().ToLower()">

    <header>
        <nav class="navbar navbar-expand-md sticky-top bg-body navbar">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center navbar_brand" asp-page="/" style="font-family: Staatliches, serif;">
                    <span class="bs-icon-sm bs-icon-rounded bs-icon-primary d-flex justify-content-center align-items-center me-2 bs-icon" style="background: rgba(13,110,253,0);width: 30px;">
                        <img class="GAD_Logo" src="~/images/GADO_Logo_w-Border.png" alt="Logo" />
                    </span>
                    <span class="gedsihub_name" style="color: rgb(70,64,64);font-size: 30px;">GEDSI Hub</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navcol-3" aria-controls="navcol-3" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="visually-hidden">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-md-flex d-lg-flex d-xl-flex d-xxl-flex justify-content-md-end justify-content-lg-end justify-content-xl-end justify-content-xxl-end" id="navcol-3">
                    <img class="search_icon" src="~/images/Search.png" alt="Search Icon" />
                    <input type="search" class="navbar_search" placeholder="Search for anything" />
                    <span class="navbar-text notification_icon_span" style="margin-right: 4px;">
                        <img class="notification_icon" src="~/images/Notification.png" alt="Notification Icon" />
                    </span>
                    <span class="d-md-flex d-lg-flex d-xl-flex d-xxl-flex justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center justify-content-xxl-center align-items-xxl-center navbar-text profile_icon_span">
                        <a asp-controller="Profile" asp-action="Index" title="View Profile" aria-label="View Profile">
                            <img class="d-xxl-flex profile_icon" src="~/images/Account.png" alt="Profile Icon" />
                        </a>
                    </span>

                </div>
            </div>
        </nav>



    </header>

   <div class="layout_container d-flex" style="min-height: 100vh;">


        <!-- Sidebar -->
        <div class="sidebar_container d-flex flex-column">
            <div class="sidebar d-flex flex-column" style="width: 100%; max-width: 350px;">
                <!-- Dashboard Button -->
                <div class="sidebar_button dashboard_button d-flex align-items-center" id="SidebarButton_Dashboard">
                    <a asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <div class="icon_container">
                            <img class="sidebar_icon" src="~/images/Dashboard_Dark.png" alt="Dashboard Icon" />
                        </div>
                        <div class="label_container">
                            <span class="sidebar_label">Dashboard</span>
                        </div>
                    </a>
                </div>

                <!-- Modules Button -->
                <div class="sidebar_button modules_button d-flex align-items-center" id="SidebarButton_Modules">
                    <div class="icon_container">
                        <img class="sidebar_icon" src="~/images/Modules_Dark.png" alt="Modules Icon" />
                    </div>
                    <div class="label_container">
                        <span class="sidebar_label">Modules</span>
                    </div>
                </div>

                <!-- Leaderboard Button -->
                <div class="sidebar_button leaderboard_button d-flex align-items-center" id="SidebarButton_Leaderboard">
                    <div class="icon_container">
                        <img class="sidebar_icon" src="~/images/Leaderboard_Dark.png" alt="Leaderboard Icon" />
                    </div>
                    <div class="label_container">
                        <span class="sidebar_label">Leaderboard</span>
                    </div>
                </div>

                <!-- Forum Button (Active State) -->
                <div class="sidebar_button forum_button d-flex align-items-center" id="SidebarButton_Forum">
                    <div class="icon_container">
                        <img class="sidebar_icon" src="~/images/Forum_Dark.png" alt="Forum Icon" />
                    </div>
                    <div class="label_container">
                        <span class="sidebar_label">Forum</span>
                    </div>
                </div>

                <!-- Feedback Button -->
                <div class="sidebar_button feedback_button d-flex align-items-center" id="SidebarButton_Feedback">
                    <div class="icon_container">
                        <img class="sidebar_icon" src="~/images/Feedback_Dark.png" alt="Feedback Icon" />
                    </div>
                    <div class="label_container">
                        <span class="sidebar_label">Feedback</span>
                    </div>
                </div>

                    <!-- Logout Button -->
                    <div class="sidebar_button logout_button d-flex align-items-center" id="SidebarButton_Logout" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <div class="icon_container">
                            <img class="sidebar_icon" src="~/images/Logout_Dark.png" alt="Logout Icon" />
                        </div>
                        <div class="label_container">
                            <span class="sidebar_label">Logout</span>
                        </div>
                    </div>
            </div>
        </div>

        <!-- Background (Main Content Area) -->
        <div class="background">
                @RenderBody()
        </div>
   </div>



    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <!-- Logout form inside modal -->
                    <form class="form-inline logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary">Yes</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>








