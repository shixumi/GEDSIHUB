<!-- Views/Feedback/Index.cshtml -->
@model GedsiHub.ViewModels.FeedbackAdminViewModel

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Feedback Admin Dashboard";
}

<div class="feedback-dashboard">
    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs" id="feedbackTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="complaint-tab" data-bs-toggle="tab" href="#complaints" role="tab" aria-controls="complaints" aria-selected="true">
                Complaints
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="suggestion-tab" data-bs-toggle="tab" href="#suggestions" role="tab" aria-controls="suggestions" aria-selected="false">
                Suggestions
            </a>
        </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content" id="feedbackTabContent">
        <!-- Complaints Tab -->
        <div class="tab-pane fade show active" id="complaints" role="tabpanel" aria-labelledby="complaint-tab">
            <div class="table-responsive feedback-responses-table">
                <table class="table">
                    <thead>
                        <tr class="feedback-table-label">
                            <th class="select-all-checkbox"><input type="checkbox" /></th>
                            <th class="user-name-feedback-label"><strong>User Name</strong></th>
                            <th class="date-feedback-label">Date</th>
                            <th class="type-of-issue-feedback-label"><strong>Type of Issue</strong></th>
                            <th class="actions-feedback-label"><strong>Actions</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Complaints)
                        {
                            <tr class="row-feedback-response">
                                <td class="checkbox-container"><input type="checkbox" /></td>
                                <td>@item.UserName</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@item.Type</td>
                                <td class="view-delete-button-container">
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success">
                                        <img src="~/images/View_Green.png" /> View
                                    </a>
                                    <a href="@Url.Action("MarkAsResolved", new { id = item.Id })" class="btn btn-secondary">
                                        Mark as Resolved
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                                        <img src="~/images/Delete.png" /> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Suggestions Tab -->
        <div class="tab-pane fade" id="suggestions" role="tabpanel" aria-labelledby="suggestion-tab">
            <div class="table-responsive feedback-responses-table">
                <table class="table">
                    <thead>
                        <tr class="feedback-table-label">
                            <th class="select-all-checkbox"><input type="checkbox" /></th>
                            <th class="user-name-feedback-label"><strong>User Name</strong></th>
                            <th class="date-feedback-label">Date</th>
                            <th class="type-of-issue-feedback-label"><strong>Type of Suggestion</strong></th>
                            <th class="actions-feedback-label"><strong>Actions</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Suggestions)
                        {
                            <tr class="row-feedback-response">
                                <td class="checkbox-container"><input type="checkbox" /></td>
                                <td>@item.UserName</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@item.Type</td>
                                <td class="view-delete-button-container">
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success">
                                        <img src="~/images/View_Green.png" /> View
                                    </a>
                                    <a href="@Url.Action("MarkAsResolved", new { id = item.Id })" class="btn btn-secondary">
                                        Mark as Resolved
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                                        <img src="~/images/Delete.png" /> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>