@model GedsiHub.Models.LessonContent

<h2>Edit Lesson Content</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ContentId" />
    <input type="hidden" asp-for="LessonId" /> <!-- Ensure LessonId is passed as a hidden field -->

    <div class="form-group">
        <label asp-for="ContentType"></label>
        <input asp-for="ContentType" class="form-control" />
        <span asp-validation-for="ContentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContentPath"></label>
        <input asp-for="ContentPath" class="form-control" />
        <span asp-validation-for="ContentPath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="H5PId"></label>
        <input class="form-control" asp-for="H5PId" />
    </div>

    <div class="form-group">
        <label asp-for="H5PMetadata"></label>
        <textarea class="form-control" asp-for="H5PMetadata"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
