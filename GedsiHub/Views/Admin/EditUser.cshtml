@model GedsiHub.ViewModels.EditUserViewModel

@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Edit User";
}


<div>
    <div class="feedback-title-searcbar-con">
        <div id="edit-user-w-name">
            <h1 id="feedback-responses-title" class="modules_title" style="color: #464040;">Edit User</h1>
            <h1 class="modules_title" style="color: #464040;">@Model.UserName</h1>
        </div>
    </div>
    <hr>

    <form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />
    <div id="edit-user-container" class="container feedback-container" style="margin-top: 34px;">
        <div id="username-email-con-eu">
            <div id="username-eu-con">
                    <label asp-for="UserName">Username</label>
                    <input input asp-for="UserName" class="input-edit-user-dashboard" type="text" />
            </div>

            <div id="email-eu-con">
                    <label asp-for="Email">Email</label>
                    <input input asp-for="Email"  class="input-edit-user-dashboard" type="text" />
            </div>
        </div>

        <div id="isadmin-isactive-con">
            <div>
                    <label asp-for="IsAdmin">Is Admin</label>
                    <input asp-for="IsAdmin" type="checkbox" />
            </div>

            <div>
                    <label asp-for="IsActive">Is Active</label>
                    <input asp-for="IsActive" type="checkbox" />
            </div>
        </div>
        <div id="edit-user-button-con">
            <button id="userEditBackButton" type="button">Back</button>
                <button id="userEditSaveButton" type="submit">Save Changes</button>
        </div>
    </div>
    </form>
</div>



