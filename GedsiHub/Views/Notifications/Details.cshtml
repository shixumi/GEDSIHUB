@model GedsiHub.Models.Notification
@{
    ViewData["Title"] = "Notification Details";
    Layout = "_LayoutApp";
}

<!-- Embedded CSS -->
<style>

    /* Notification Details */
    .notification-details {
        padding: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        background: #ffffff;
        border-radius: 8px;
        width: 100%;
        max-width: 600px;
        text-align: center;
        color: #464040;
        overflow-wrap: break-word; /* Ensures words wrap inside the container */
        word-wrap: break-word; /* Compatibility for older browsers */
        word-break: break-word; /* Forces breaks for long words */
    }

        .notification-details h2 {
            margin-bottom: 15px;
            font-size: 2rem;
            color: #333333;
        }

        .notification-details .timestamp {
            font-size: 0.9em;
            color: #888;
            margin-bottom: 15px;
        }

        .notification-details i {
            font-size: 64px;
            margin-bottom: 20px;
            color: #660000;
        }

        .notification-details {
            font-size: 1em;
            line-height: 1.6;
            color: #464040;
            text-align: center;
            max-width: 90%; /* Prevents overflowing */
            overflow-wrap: break-word; /* Ensures long words break to fit */
            word-break: break-word; /* Prevent long words from breaking layout */
            margin-top: 10px;
        }
</style>


<div id="delete-user-container" class="container feedback-container">
<div class="notification-details">
    <i class="@Model.IconClass" aria-hidden="true"></i>
    <h2>@Model.Title</h2>
    <div class="timestamp">Posted on @Model.CreatedAt.ToString("f")</div>
    <div>@Model.Message</div>
</div>
</div>
