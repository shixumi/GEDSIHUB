@model GedsiHub.Models.ViewModels.NotificationViewModel
@{
    ViewData["Title"] = "Create Notification";
    Layout = "_LayoutApp";
}




<div>
    <form asp-action="AdminCreate" method="post">
    <div class="feedback-title-searcbar-con">
        <h1 id="feedback-responses-title" class="modules_title" style="color: #464040;">Create Notification</h1>
    </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class="custom-hr">
    <div id="notification-container" class="container">
        <div class="create-notification-container">
            <div>
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div>
               <label asp-for="Message"></label>
               <textarea asp-for="Message" class="notif-message" required></textarea>
               <span asp-validation-for="Message" class="text-danger"></span>
           </div>

            <div>
                <label asp-for="Category"></label>
                    <select asp-for="Category" asp-items="@(new SelectList((List<string>)ViewData["Categories"]))" required>
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
            </div>



            <div style="margin-top: 0.8rem;">
                    
                    <input asp-for="IsImportant" type="checkbox" />
                    <label style="display: inline-block; margin-left: 0.5rem;">Is Important</label>
                    <span asp-validation-for="IsImportant" class="text-danger"></span>
            </div>


            <div>
                <label asp-for="TargetAudience"></label>
                <select asp-for="TargetAudience" asp-items="@(new SelectList((List<string>)ViewData["TargetAudiences"]))" required>                    
                     <option value="">Select Audience</option>
                </select>
                <span asp-validation-for="TargetAudience" class="text-danger"></span>
            </div>


        </div>
        <div class="create-notif-button-con">
                <button class="create-notification-button" type="submit">Create Notification</button>       
        </div>
    </div>
    </form>
</div>




