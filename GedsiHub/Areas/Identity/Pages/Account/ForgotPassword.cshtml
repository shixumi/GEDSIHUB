@page
@model GedsiHub.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Reset Your Password";
}

<section id="rpw-main">
    <div class="text-center justify-content-center align-items-center align-content-center mx-auto justify-content-md-center upper info" style="max-width: 596px;">
        <!-- Instructions -->
        <h2 class="fw-semibold text-center" style="text-align: center;margin-bottom: 20px;font-family: Poppins, sans-serif;">Reset Your Password</h2>
        <p class="d-flex justify-content-center reset-p">Enter your PUP webmail below and we will send you a link to reset your password.</p>
    </div>
    <div class="container form-con" style="padding-top: 40px;">

        <!-- Form for password reset -->
        <form class="reset-form" method="post">
            <div class="mb-3">

                <!-- Email Input Field -->
                <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Email</label>
                <input class="focus-ring focus-ring-light form-control d-flex justify-content-center align-items-center login-form" asp-for="Input.Email" type="email" placeholder="Enter your pup webmail" required pattern="^[a-zA-Z0-9._%+-]" />
                <!-- Validation message -->
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="text-center shadow-sm d-block w-100 submit-btn" type="submit" title="click to login" data-bs-target="#modal-1" data-bs-toggle="modal">Send Email</button>
                <div class="modal fade" role="dialog" tabindex="-1" data-bs-backdrop="static" id="modal-1">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Loading</h4>
                                <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" style="font-size: 38px;">
                                    <rect opacity="0.3" x="3" y="10" width="18" height="4" rx="2" fill="currentColor"></rect>
                                    <rect x="7" y="10" width="10" height="4" rx="2" fill="currentColor"></rect>
                                </svg>
                                <p>Please wait while we are sending a link to your email...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <a class="text-center shadow-sm d-block w-100 cancel-btn" role="button" href="~/Identity/Account/Login" title="click to login" data-bs-target="#success-activated">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
