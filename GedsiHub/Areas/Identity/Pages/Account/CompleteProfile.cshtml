@page
@model CompleteProfileModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Complete Your Profile";
}

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- General User Information -->
    <section id="suf-main">
        <div class="text-center heading-suf">
            <h2 class="fw-semibold">Welcome to GEDSI Hub!</h2>
            <p>Please complete the following information to proceed.</p>
        </div>

        <!-- Step 1 Page -->
        <section id="step1" class="step active">
            <div class="container form-con" style="padding-top: 30px; padding-bottom:30px">
                <h4 class="fw-semibold">General Information</h4>
                <div class="mb-3">
                    <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Full Legal Name</label>
                    <!-- Full Name Input -->
                    <div class="input-fln">
                        <!-- First Name Input -->
                        <input asp-for="Input.FirstName" class="form-control full-leg-name s-form" placeholder="First Name" required />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                        <!-- Middle Name Input -->
                        <input asp-for="Input.MiddleName" class="form-control full-leg-name s-form" placeholder="Middle Name (Optional)" required />
                        <!-- <span asp-validation-for="Input.MiddleName" class="text-danger"></span> -->

                        <!-- Last Name Input -->
                        <input asp-for="Input.LastName" class="form-control full-leg-name s-form" placeholder="Last Name" required />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>

                        <!-- Suffix -->
                        <input asp-for="Input.Suffix" class="form-control full-leg-name s-form" placeholder="Suffix (Optional)" />
                        <!-- <span asp-validation-for="Input.Suffix" class="text-danger"> </span> -->
                    </div>

                    <!-- Lived Name -->
                    <!-- Need to setup in the backend -->
                    <div class="mb-3">
                        <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Lived Name <span style="color: rgb(156, 156, 156);">(Optional)</span></label>
                        <input asp-for="Input.LivedName" class="form-control s-form" type="text" placeholder="Lived Name">
                    </div>

                    <!-- Birthday -->
                    <div class="mb-3">
                        <label asp-for="Input.DateOfBirth" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Birthday</label>
                        <input asp-for="Input.DateOfBirth" class="form-control s-form" type="date" />
                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3">
                        <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Phone Number</label>
                        <input asp-for="Input.PhoneNumber" class="form-control s-form" placeholder="09XXXXXXXX" required maxlength="11" pattern="[0-9]*" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
        
            </div>


            <!-- Next button -->
            <div class="container d-flex justify-content-end nav-button">
                <button class="next-btn" type="button" onclick="nextStep(2)">Next</button>
            </div>
        </section>

        <!-- Step 2 Page -->
        <section id="step2" class="step">
            <div class="container form-con" style="padding-top: 30px; padding-bottom:30px">
                <!-- Sex -->
                <!-- Need to verify in the back end -->
                <div class="mb-3">
                    <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Sex</label>
                    <select asp-for="Input.Sex" class="form-control form-select s-form" required>
                        <option value="" disabled selected>Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Intersex">Intersex</option>
                    </select>
                    <span asp-validation-for="Input.Sex" class="text-danger"></span>
                </div>

                <!-- Gender -->
                <!-- Need to verify in the back end -->
                <div class="mb-3">
                    <label class="form-label d-flex justify-content-start input-lbl">Gender</label>
                    <select asp-for="Input.GenderIdentity" class="form-control form-select s-form" required>
                        <option value="" disabled selected>Select</option>
                        <option value="Cisgender">Cisgender</option>
                        <option value="Transgender">Transgender</option>
                        <option value="Agender">Agender</option>
                        <option value="Gender Fluid">Gender Fluid</option>
                        <option value="Gender Queer">Gender Queer</option>
                    </select>
                    <span asp-validation-for="Input.GenderIdentity" class="text-danger"></span>
                </div>

                <!-- Pronouns -->
                <!-- Need to verify in the back end -->
                <div class="mb-3">
                    <label asp-for="Input.Pronouns" class="form-label d-flex justify-content-start input-lbl">Pronouns</label>
                    <select asp-for="Input.Pronouns" class="form-control form-select s-form" required>
                        <option value="" disabled selected>Select</option>
                        <option value="She/her">She/her</option>
                        <option value="He/him">He/him</option>
                        <option value="They/them">They/them</option>
                    </select>
                    <span asp-validation-for="Input.Pronouns" class="text-danger"></span>
                </div>

                <!-- Honorifics -->
                <!-- Need to verify in the back end -->
                <div class="mb-3">
                    <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Honorifics <span style="color: rgb(156, 156, 156);">(Optional)</span></label>
                    <input asp-for="Input.Honorifics" class="form-control s-form" type="text" placeholder="Enter preferred honorifics" />
                </div>

                @* <!-- Profile Path -->
                <div class="form-group">
                    <label asp-for="Input.ProfilePicturePath" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl"></label>
                    <input asp-for="Input.ProfilePicturePath" class="form-control" type="text" />
                    <span asp-validation-for="Input.ProfilePicturePath" class="text-danger"></span>
                    <!-- If you intend to allow file uploads for the profile picture, you can use type="file" -->
                    <!-- <input asp-for="Input.ProfilePicturePath" class="form-control" type="file" /> -->
                </div> *@

            </div>
            <div class="container d-flex justify-content-between nav-button">
                <button class="back-btn" type="button" onclick="prevStep(1)">Back</button>
                <button class="next-btn" type="button" onclick="nextStep(3)">Next</button>
            </div>
        </section>

        <!-- Step 3 Page -->
        <section id="step3" class="step">
            <div class="container form-con" style="padding-top: 30px; padding-bottom:30px">
                <!-- Member of Indigenous Community -->
                <!-- Need to verify in the back end -->
                <div class="mb-3">
                    <label class="form-label text-start d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Are you a member of any indigenous cultural community?</label>
                    <select asp-for="Input.IsMemberOfIndigenousCommunity" class="form-select s-form" required>
                        <option value="" disabled selected>Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.IsMemberOfIndigenousCommunity" class="text-danger"></span>
                </div>

                <!-- Disabled Person? -->
                <div class="mb-3">
                    <label class="form-label text-start d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Do you identify yourself as a differently abled person?</label>
                    <select asp-for="Input.IsDisabled" class="form-select s-form" required>
                        <option value="" disabled selected>Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.IsDisabled" class="text-danger"></span>
                </div>
            </div>

            <div class="container d-flex justify-content-between nav-button">
                <button class="back-btn" type="button" onclick="prevStep(2)">Back</button>
                <button class="next-btn" type="button" onclick="nextStep(4)">Next</button>
            </div>

        </section>

        <!-- Step 4 Page -->
        <section id="step4" class="step">
            <div class="container form-con" style="padding-top: 30px; padding-bottom:30px">

                <!-- Student-Specific Information -->

                @if (User.IsInRole("Student"))
                {
                    <h4 class="fw-semibold d-flex d-lg-flex justify-content-start justify-content-lg-start">Student Information</h4>

                    <!-- College Department Dropdown -->
                    <div class="mb-3">
                        <label asp-for="Input.StudentInfo.CollegeDeptId" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl"></label>
                        <select id="college" asp-for="Input.StudentInfo.CollegeDeptId" class="form-control" asp-items="Model.CollegeDepartments" onchange="showProgramOptions()">
                            <option value="" disabled selected>Select your department</option>
                        </select>
                        <span asp-validation-for="Input.StudentInfo.CollegeDeptId" class="text-danger"></span>
                    </div>

                    <!-- Course Dropdown -->
                    <!-- Add validations to only display the available course for each department -->
                    <div class="mb-3">
                        <label asp-for="Input.StudentInfo.CourseId" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl"></label>
                        <select id="program" asp-for="Input.StudentInfo.CourseId" class="form-control" asp-items="Model.Courses">
                            <option value="" disabled selected>Select</option>
                        </select>
                        <span asp-validation-for="Input.StudentInfo.CourseId" class="text-danger"></span>
                    </div>

                    <!-- Student Year -->
                    <div class="mb-3">
                        <label asp-for="Input.StudentInfo.Year" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl"></label>
                        <input asp-for="Input.StudentInfo.Year" class="form-control" type="number" maxlength="1" min="1" max="5" placholder="Please enter year of study." required />
                        <span asp-validation-for="Input.StudentInfo.Year" class="text-danger"></span>
                    </div>

                    <!-- Student Section -->
                    <div class="mb-3">
                        <label asp-for="Input.StudentInfo.Section" class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl"></label>
                        <input asp-for="Input.StudentInfo.Section" class="form-control" maxlength="2" placeholder="Please enter section" required/>
                        <span asp-validation-for="Input.StudentInfo.Section" class="text-danger"></span>
                    </div>
                }

                <!-- Employee-Specific Information -->
                @if (User.IsInRole("Employee"))
                {
                    <h4 class="fw-semibold d-flex d-lg-flex justify-content-start justify-content-lg-start">Employee Information</h4>

                        
                    <div id="employee-fields" class="conditional-fields">

                        <!-- Employee Type -->
                        <div asp-for="" class="mb-3">
                            <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Employee Type</label>
                            <select asp-for="Input.EmployeeInfo.EmployeeType" class="form-control form-select s-form" required>
                                <option value="" disabled selected>Select employee type</option>
                                <option value="Faculty">Faculty</option>
                                <option value="Administrative Staff">Administrative Staff</option>
                                <option value="Designee">Designee</option>
                            </select>
                        </div>

                        <!-- Employment Status -->
                        <div class="mb-3">
                            <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Employment Status</label>
                            <select asp-for="Input.EmployeeInfo.EmploymentStatus" class="form-control form-select s-form" required>
                                <option value="" disabled selected>Select</option>
                                <option value="Permanent">Permanent</option>
                                <option value="Casual">Casual</option>
                                <option value="Contract of Service">Contract of Service</option>
                                <option value="Job Order">Job Order</option>
                                <option value="Temporary">Temporary</option>
                                <option value="Part-time">Part-time</option>
                            </select>
                        </div>
                            
                        <!-- Sector -->
                        <div class="mb-3">
                            <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Sector</label>
                            <select id="sector" asp-for="Input.EmployeeInfo.Sector" class="form-control form-select s-form" onchange="showBranchOptions()" required>
                                <option value="" disabled selected>Select your sector</option>
                                <option value="OEVP">Office of the Executive Vice President</option>
                                <option value="OVPAA">Office of the Vice President for Academic Affairs</option>
                                <option value="OVPF">Office of the Vice President for Planning and Finance</option>
                                <option value="OVPSAS">Office of the Vice President for Student Affairs and Services</option>
                                <option value="OVPA">Office of the Vice President for Administration</option>
                                <option value="OVPC">Office of the Vice President for Campuses</option>
                                <option value="OVPRED">Office of the Vice President for Research, Extension, and Development</option>
                                <option value="OPRES">Office of the President</option>
                            </select>
                        </div>

                        <!-- Branch/Office/Section/Unit -->
                        <div id="branch-office-container" class="mb-3">
                            <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Branch/Office/Section/Unit</label>
                            <select id="branch-office" asp-for="Input.EmployeeInfo.BranchOfficeSectionUnit" class="form-control form-select s-form"  required>
                                <option value="" disabled selected>Select Branch-Office-Section-Unit</option>
                            </select>
                        </div>

                        <!-- Position/Designation -->
                        <div class="mb-3">
                            <label class="form-label d-flex d-lg-flex justify-content-start justify-content-lg-start input-lbl">Position/Designation</label>
                            <input asp-for="Input.EmployeeInfo.Position" class="form-control s-form" type="text" placeholder="Enter Position/Designation" required>
                        </div>
                    </div>
                }

            </div>
            <!-- Buttons -->
            <div class="container d-flex justify-content-between nav-button">
                <button class="back-btn" type="button" onclick="prevStep(3)">Back</button>
                <button class="next-btn" type="submit" onclick="submitForm">Save Profile</button>
                
            </div>
        </section>

    </section>
    
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}