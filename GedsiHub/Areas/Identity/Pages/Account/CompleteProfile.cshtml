@page
@model CompleteProfileModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Complete Your Profile";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- General User Information -->
    <section id="suf-main">
        <div class="text-center heading-suf">
            <h2 class="fw-semibold">Welcome to GEDSI Hub!</h2>
            <p>Please complete the following information to proceed.</p>
        </div>

        <section id="step1" class="step active">
            <div class="container form-con" style="padding-top: 30px; padding-bottom:30px">
                <form>
            </div>
        </section>
        <h2>General Information</h2>
        
        <div class="form-group">
            <label asp-for="Input.FirstName" class="control-label"></label>
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.LastName" class="control-label"></label>
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.DateOfBirth" class="control-label"></label>
            <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.GenderIdentity" class="control-label"></label>
            <input asp-for="Input.GenderIdentity" class="form-control" />
            <span asp-validation-for="Input.GenderIdentity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Pronouns" class="control-label"></label>
            <input asp-for="Input.Pronouns" class="form-control" />
            <span asp-validation-for="Input.Pronouns" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Input.IsMemberOfIndigenousCommunity" class="form-check-input" />
            <label asp-for="Input.IsMemberOfIndigenousCommunity" class="form-check-label"></label>
            <span asp-validation-for="Input.IsMemberOfIndigenousCommunity" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Input.IsDisabled" class="form-check-input" />
            <label asp-for="Input.IsDisabled" class="form-check-label"></label>
            <span asp-validation-for="Input.IsDisabled" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ProfilePicturePath" class="control-label"></label>
            <input asp-for="Input.ProfilePicturePath" class="form-control" type="text" />
            <span asp-validation-for="Input.ProfilePicturePath" class="text-danger"></span>
            <!-- If you intend to allow file uploads for the profile picture, you can use type="file" -->
            <!-- <input asp-for="Input.ProfilePicturePath" class="form-control" type="file" /> -->
        </div>
    </section>

    <!-- Student-Specific Information -->
    <!-- Student-Specific Information -->
    @if (User.IsInRole("Student"))
    {
        <section>
            <h2>Student Information</h2>

            <!-- College Department Dropdown -->
            <div class="form-group">
                <label asp-for="Input.StudentInfo.CollegeDeptId" class="control-label"></label>
                <select asp-for="Input.StudentInfo.CollegeDeptId" class="form-control" asp-items="Model.CollegeDepartments"></select>
                <span asp-validation-for="Input.StudentInfo.CollegeDeptId" class="text-danger"></span>
            </div>

            <!-- Course Dropdown -->
            <div class="form-group">
                <label asp-for="Input.StudentInfo.CourseId" class="control-label"></label>
                <select asp-for="Input.StudentInfo.CourseId" class="form-control" asp-items="Model.Courses"></select>
                <span asp-validation-for="Input.StudentInfo.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.StudentInfo.Year" class="control-label"></label>
                <input asp-for="Input.StudentInfo.Year" class="form-control" type="number" min="1" />
                <span asp-validation-for="Input.StudentInfo.Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.StudentInfo.Section" class="control-label"></label>
                <input asp-for="Input.StudentInfo.Section" class="form-control" />
                <span asp-validation-for="Input.StudentInfo.Section" class="text-danger"></span>
            </div>
        </section>
    }


    <!-- Employee-Specific Information -->
    @if (User.IsInRole("Employee"))
    {
        <section>
            <h2>Employee Information</h2>

            <div class="form-group">
                <label asp-for="Input.EmployeeInfo.BranchOfficeSectionUnit" class="control-label"></label>
                <input asp-for="Input.EmployeeInfo.BranchOfficeSectionUnit" class="form-control" />
                <span asp-validation-for="Input.EmployeeInfo.BranchOfficeSectionUnit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.EmployeeInfo.Position" class="control-label"></label>
                <input asp-for="Input.EmployeeInfo.Position" class="form-control" />
                <span asp-validation-for="Input.EmployeeInfo.Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.EmployeeInfo.Sector" class="control-label"></label>
                <input asp-for="Input.EmployeeInfo.Sector" class="form-control" />
                <span asp-validation-for="Input.EmployeeInfo.Sector" class="text-danger"></span>
            </div>
        </section>
    }

    <button type="submit" class="btn btn-primary">Save Profile</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
